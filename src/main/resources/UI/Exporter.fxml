<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXProgressBar?>
<?import com.jfoenix.controls.JFXRadioButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="Exporter" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.QYun.SuperSpineViewer.GUI.ExporterController">
    <ScrollPane hbarPolicy="NEVER" styleClass="side-menu">
        <VBox spacing="20.0">
            <padding>
                <Insets bottom="20.0" left="16.0" right="10.0" top="20.0" />
            </padding>
            <JFXButton onAction="#B_Open" text="Open Skeleton" textFill="#5264ae">
                <font>
                    <Font name="System Bold" size="14.0" />
                </font>
            </JFXButton>
            <VBox spacing="12.0">
                <padding>
                    <Insets left="8.0" />
                </padding>
                <Label text="Project Information">
                    <styleClass>
                        <String fx:value="side-label" />
                        <String fx:value="BOLD" />
                    </styleClass>
                </Label>
                <Label fx:id="L_Version" layoutX="18.0" layoutY="37.0" styleClass="side-label" text="Version : " />
                <Label fx:id="L_Skel" styleClass="side-label" text="Skel : " />
                <Label fx:id="L_Atlas" styleClass="side-label" text="Atlas : " />
                <Label fx:id="L_FPS" layoutX="18.0" layoutY="60.0" styleClass="side-label" text="FPS : " />
            </VBox>
            <VBox layoutX="26.0" layoutY="79.0" spacing="16.0">
                <padding>
                    <Insets left="8.0" />
                </padding>
                <Label text="Graphic Setting">
                    <styleClass>
                        <String fx:value="side-label" />
                        <String fx:value="BOLD" />
                    </styleClass>
                </Label>
                <Label layoutX="18.0" layoutY="10.0" styleClass="side-label" text="Render : " />
                <HBox spacing="16.0">
                    <JFXRadioButton onAction="#RB_OpenJFX" selected="true" text="OpenJFX">
                        <toggleGroup>
                            <ToggleGroup fx:id="Render" />
                        </toggleGroup>
                        <styleClass>
                            <String fx:value="custom-jfx-radio-button" />
                            <String fx:value="custom-jfx-radio-button-blue" />
                        </styleClass>
                    </JFXRadioButton>
                    <JFXRadioButton onAction="#RB_LibGDX" text="LibGDX" toggleGroup="$Render">
                        <styleClass>
                            <String fx:value="custom-jfx-radio-button" />
                            <String fx:value="custom-jfx-radio-button-green" />
                        </styleClass>
                    </JFXRadioButton>
                </HBox>
            </VBox>
            <VBox spacing="16.0">
                <padding>
                    <Insets left="8.0" />
                </padding>
                <Label text="Format : ">
                    <styleClass>
                        <String fx:value="side-label" />
                        <String fx:value="BOLD" />
                    </styleClass>
                </Label>
                <JFXRadioButton onAction="#RB_MOV" selected="true" text="MOV">
                    <styleClass>
                        <String fx:value="custom-jfx-radio-button" />
                        <String fx:value="custom-jfx-radio-button-blue" />
                    </styleClass>
                    <toggleGroup>
                        <ToggleGroup fx:id="Format" />
                    </toggleGroup>
                </JFXRadioButton>
                <JFXRadioButton layoutX="10.0" layoutY="33.0" onAction="#RB_GIF" text="GIF" toggleGroup="$Format">
                    <styleClass>
                        <String fx:value="custom-jfx-radio-button" />
                        <String fx:value="custom-jfx-radio-button-red" />
                    </styleClass>
                </JFXRadioButton>
                <JFXRadioButton layoutX="10.0" layoutY="10.0" onAction="#RB_Sequence" text="Sequence" toggleGroup="$Format">
                    <styleClass>
                        <String fx:value="custom-jfx-radio-button" />
                        <String fx:value="custom-jfx-radio-button-green" />
                    </styleClass>
                </JFXRadioButton>
            </VBox>
            <VBox layoutX="26.0" layoutY="195.0" spacing="16.0">
                <padding>
                    <Insets left="8.0" />
                </padding>
                <Label text="Exporter Setting">
                    <styleClass>
                        <String fx:value="side-label" />
                        <String fx:value="BOLD" />
                    </styleClass>
                </Label>
                <HBox maxWidth="250.0">
                    <padding>
                        <Insets right="10.0" />
                    </padding>
                    <JFXButton minWidth="53.0" onAction="#B_Path" text="Path" textFill="#5264ae">
                        <font>
                            <Font name="System Bold" size="14.0" />
                        </font>
                    </JFXButton>
                    <JFXTextField fx:id="T_Path" />
                </HBox>
            <HBox layoutX="18.0" layoutY="41.0" maxWidth="250.0">
               <padding>
                  <Insets right="10.0" />
               </padding>
               <children>
                      <JFXButton onAction="#B_Export" text="Export" textFill="#5264ae">
                          <font>
                              <Font name="System Bold" size="14.0" />
                          </font>
                      </JFXButton>
                  <JFXButton layoutX="10.0" layoutY="10.0" onAction="#B_Preview" text="Preview" textFill="#5264ae">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </JFXButton>
               </children>
            </HBox>
                <JFXProgressBar fx:id="P_Export" maxWidth="250.0" />
            </VBox>
        </VBox>
    </ScrollPane>
</StackPane>
