<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.QYun</groupId>
  <artifactId>SuperSpineViewer</artifactId>
  <name>SuperSpineViewer</name>
  <version>0.1.0</version>
  <url>https://Q-Audio.org/</url>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.8.1</version>
        <configuration>
          <compilerArgs>
            <arg>--module-path</arg>
            <arg>${project.basedir}/lib/OpenJFX</arg>
            <arg>--add-modules</arg>
            <arg>javafx.controls,javafx.fxml</arg>
            <arg>--add-reads</arg>
            <arg>javafx.graphics=ALL-UNNAMED</arg>
            <arg>--add-exports</arg>
            <arg>javafx.graphics/com.sun.javafx.scene=ALL-UNNAMED</arg>
          </compilerArgs>
          <release>15</release>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.2.4</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <mainClass>com.QYun.SuperSpineViewer.AppLauncher</mainClass>
                </transformer>
                <transformer />
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.openjfx</groupId>
        <artifactId>javafx-maven-plugin</artifactId>
        <version>0.0.5</version>
        <configuration>
          <mainClass>com.QYun.SuperSpineViewer.Main</mainClass>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <repositories>
    <repository>
      <id>sonatype</id>
      <name>Sonatype</name>
      <url>https://repository.sonatype.org/content/groups/public/</url>
    </repository>
  </repositories>
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.12</version>
      <scope>test</scope>
      <exclusions>
        <exclusion>
          <artifactId>hamcrest-core</artifactId>
          <groupId>org.hamcrest</groupId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>com.esotericsoftware.spine</groupId>
      <artifactId>spine-libgdx_2.1</artifactId>
      <version>2.1</version>
      <scope>system</scope>
      <systemPath>${project.basedir}/lib/spine-libgdx_2.1-2.1.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>com.esotericsoftware.spine</groupId>
      <artifactId>spine-libgdx_3.1</artifactId>
      <version>3.1</version>
      <scope>system</scope>
      <systemPath>${project.basedir}/lib/spine-libgdx_3.1-3.1.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>com.esotericsoftware.spine</groupId>
      <artifactId>spine-libgdx_3.4</artifactId>
      <version>3.4</version>
      <scope>system</scope>
      <systemPath>${project.basedir}/lib/spine-libgdx_3.4-3.4.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>com.esotericsoftware.spine</groupId>
      <artifactId>spine-libgdx_3.5</artifactId>
      <version>3.5</version>
      <scope>system</scope>
      <systemPath>${project.basedir}/lib/spine-libgdx_3.5-3.5.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>com.esotericsoftware.spine</groupId>
      <artifactId>spine-libgdx_3.6</artifactId>
      <version>3.6</version>
      <scope>system</scope>
      <systemPath>${project.basedir}/lib/spine-libgdx_3.6-3.6.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>com.esotericsoftware.spine</groupId>
      <artifactId>spine-libgdx_3.7</artifactId>
      <version>3.7</version>
      <scope>system</scope>
      <systemPath>${project.basedir}/lib/spine-libgdx_3.7-3.7.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>com.esotericsoftware.spine</groupId>
      <artifactId>spine-libgdx_3.8</artifactId>
      <version>3.8</version>
      <scope>system</scope>
      <systemPath>${project.basedir}/lib/spine-libgdx_3.8-3.8.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>com.esotericsoftware.spine</groupId>
      <artifactId>spine-libgdx_4.0</artifactId>
      <version>4.0</version>
      <scope>system</scope>
      <systemPath>${project.basedir}/lib/spine-libgdx_4.0-4.0.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>com.QYun</groupId>
      <artifactId>LibGDFX</artifactId>
      <version>1.0.0</version>
      <scope>system</scope>
      <systemPath>${project.basedir}/lib/LibGDFX-1.0.0.jar</systemPath>
    </dependency>
  </dependencies>
  <properties>
    <maven.compiler.target>15</maven.compiler.target>
    <maven.compiler.source>15</maven.compiler.source>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>
</project>
